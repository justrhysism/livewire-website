@import "tailwindcss/base";
@import "tailwindcss/components";
@import "tailwindcss/utilities";

@import "hamburger.pcss";

@layer base {
	html {
		font-size: 14px;
	}

	body {
		@apply font-sans;
		@apply bg-black;
		@apply text-white;
		@apply text-base;
		@apply subpixel-antialiased;
	}

	h1 {
		@apply text-2xl;
	}

	h2 {
		@apply text-xl;
	}

	h3 {
		@apply text-lg;
	}

	a {
		@apply text-green-300 underline;
	}
}
