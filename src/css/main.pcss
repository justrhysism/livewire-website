@import "tailwindcss/base";

@layer base {
	body {
		@apply font-sans;
		@apply bg-gray-800;
		@apply text-gray-200;
		@apply subpixel-antialiased;
	}

	h1 {
		@apply text-2xl;
	}

	h2 {
		@apply text-xl;
	}

	h3 {
		@apply text-lg;
	}

	a {
		@apply text-blue-600 underline;
	}
}

@import "tailwindcss/components";
@import "tailwindcss/utilities";
